package br.edu.principal;
import java.util.Scanner;
public class principal {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
        
	    double Horas, H, M, Conversao;
			        
	    System.out.print("Insira a hora (em decimal): ");
		Horas = sc.nextDouble();        
		 H = Math.floor(Horas); 
		 M = (Horas - H); 
			        
	     Conversao = (H * 60) + (M * 100); 
			        
	     System.out.print("A convers√£o totalizada em minutos foi de: " + (int) Conversao);

	}

}
